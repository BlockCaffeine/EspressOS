{
	"name": "espressos",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "del-cli ./.svelte_kit",
		"dependency:clean": "del-cli ./node_modules",
		"dev:start": "vite dev",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"package:check": "run-s \"package:format --check\"",
		"package:format": "sort-package-json \"**/package.json\" \"!**/node_modules\"",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"verify": "run-s package:check format:check check lint clean build"
	},
	"dependencies": {
		"@lucide/svelte": "^0.482.0",
		"@metamask/providers": "^21.0.0",
		"@zag-js/listbox": "^1.12.3",
		"@zag-js/svelte": "^1.12.3",
		"@zag-js/utils": "^1.12.3",
		"apexcharts": "^4.7.0",
		"viem": "^2.29.4"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.26.0",
		"@skeletonlabs/skeleton": "^3.1.3",
		"@skeletonlabs/skeleton-svelte": "^1.2.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.21.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.7",
		"del-cli": "^6.0.0",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.7.0",
		"globals": "^16.1.0",
		"npm-run-all2": "^7.0.2",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sort-package-json": "^3.2.1",
		"svelte": "^5.30.1",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.1.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5"
	},
	"packageManager": "pnpm@10.12.4",
	"engines": {
		"node": "22.16.0",
		"pnpm": "^10.6.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"@tailwindcss/oxide"
		]
	}
}
